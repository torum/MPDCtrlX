					<Grid Grid.Column="2" x:Name="PlaylistColumn3">
						<TextBlock Name="PlaylistColumn3x" Opacity="0.5" HorizontalAlignment="Left" Padding="12,0,0,0" VerticalAlignment="Center" Text="{x:Static prop:Resources.ListviewColumnHeader_Title}"></TextBlock>
					</Grid>

