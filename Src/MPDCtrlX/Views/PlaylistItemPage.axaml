							</TextBlock>
							<TextBlock Grid.Column="7" Width="{Binding Bounds.Size.Width, ElementName=PlaylistColumn8}" Text="{Binding Track}" IsVisible="{Binding $parent[ListBox].((vm:MainViewModel)DataContext).IsPlaylistColumnHeaderTrackVisible}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0" Padding="12,0,0,0" Opacity="0.9">
							</TextBlock>
							<TextBlock Grid.Column="8" Width="{Binding Bounds.Size.Width, ElementName=PlaylistColumn9}" Text="{Binding Genre}" IsVisible="{Binding $parent[ListBox].((vm:MainViewModel)DataContext).IsPlaylistColumnHeaderGenreVisible}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0" Padding="12,0,0,0" Opacity="0.9">
